<h1 class="inventoryHead"> <%= @inventory.name %> </h1>
<% if can? :manage, @inventory %>
  <%= link_to 'Add food', new_food_path(inventory: @inventory) , class:("newRecipe") %>
<% end %>

<table class="recipeFoods">
  <tr>
    <th>Food</th>
    <th>Quantity</th>
    <th>Actions</th>
    </tr>
    <% @inventories_foods.each do |one| %>
     <tr>
       <td> <%= one.food.name %> </td>
       <td> <%= one.quantity %> <%= one.food.measurement_unit %></td>
       <td>
       <%= button_to "Remove", one.food, method: :delete , class:('removeRecipe'), remote: true %>
       <%= link_to "Edit this food", edit_food_path(one.food) %>
       </td>
     </tr>
    <% end %>
  
</table>
