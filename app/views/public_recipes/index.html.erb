<div class="recipes">
  <% @recipes.each do |recipe| %>
    <% if recipe.public%>
    <div class="recipe">
      <div class="recipeactions">
        <h2 class="recipeName"> <%= recipe.name %> </h2>
      </div>
      <%= link_to recipe_path(recipe), class:('recipeDetails') do %>
        <p class="recipeDescription"> <%= recipe.description%></p>
      <% end %>
    </div>
    <% end %>
  <% end %>
</div>  

